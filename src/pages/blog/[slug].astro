---
import Base from '../../layouts/Base.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---
<Base title={`${post.data.title} - The Slop Whisperer`}>
  <main>
    <article>
      <header>
        <h1>{post.data.title}</h1>
        <p class="description">{post.data.description}</p>
        <time datetime={post.data.pubDate.toISOString()}>
          {post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
        {post.data.tags && (
          <div class="tags">
            {post.data.tags.map((tag: string) => <span class="tag">{tag}</span>)}
          </div>
        )}
      </header>
      <div class="content">
        <Content />
      </div>
    </article>
    <a href="/blog/" class="back-link">&larr; Back to blog</a>
  </main>

  <style>
    main {
      max-width: 640px;
      margin: 0 auto;
      padding: 2.5rem 1.5rem;
    }
    header {
      margin-bottom: 2.5rem;
    }
    h1 {
      font-size: 2rem;
      font-weight: 700;
      color: #fff;
      margin-bottom: 0.75rem;
      line-height: 1.3;
    }
    .description {
      color: #aaa;
      font-style: italic;
      margin-bottom: 0.75rem;
    }
    time {
      color: #666;
      font-size: 0.9rem;
    }
    .tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-top: 0.75rem;
    }
    .tag {
      background: #1a1a1a;
      color: #888;
      padding: 0.2rem 0.6rem;
      border-radius: 3px;
      font-size: 0.8rem;
    }
    .content {
      color: #e0e0e0;
      line-height: 1.8;
    }
    .content :global(h2) {
      font-size: 1.5rem;
      color: #fff;
      margin-top: 2.5rem;
      margin-bottom: 0.75rem;
    }
    .content :global(h3) {
      font-size: 1.2rem;
      color: #ccc;
      margin-top: 2rem;
      margin-bottom: 0.5rem;
    }
    .content :global(p) {
      margin-bottom: 1rem;
    }
    .content :global(blockquote) {
      border-left: 3px solid #8ab4f8;
      padding-left: 1rem;
      margin: 1.5rem 0;
      color: #aaa;
      font-style: italic;
    }
    .content :global(hr) {
      border: none;
      border-top: 1px solid #222;
      margin: 2rem 0;
    }
    .content :global(strong) {
      color: #fff;
    }
    .content :global(sup) {
      color: #8ab4f8;
      font-size: 0.75rem;
    }
    .back-link {
      display: inline-block;
      margin-top: 3rem;
      color: #8ab4f8;
      font-size: 0.9rem;
    }
  </style>
</Base>
